// 	font-size size
// 	font-weight 400
//
// fBold( size )
// 	font-family fSSerif
// 	font-size size
// 	font-weight 700

// Loader
@import 'loader.styl'

#infos
	// display none
	padding 10px
	color #555555
	position absolute
	bottom 0
	right 0
	z-index 100000
	font-size 11px
	background rgba(0,0,0,.1)
	text-align right
	#dev,#opm,#share
		padding 5px
		.fb-like.fb_iframe_widget
			padding-left 5px
		#twitter-widget-0
			margin-bottom -2px
	a
		text-decoration none
		position relative
		color #666666

		&:after
			content: ""
			position: absolute
			width: 100%
			height: 1px
			bottom: 0
			left: 0
			background-color: #FFDD22
			visibility hidden
			transform scaleX(0)
			transform-origin top left
			transition all 0.3s ease-out 0s

		&:hover
			&:after
				visibility: visible
				transform: scaleX(1)
